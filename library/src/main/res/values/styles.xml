<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorTeal</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_black</item>
    </style>

    <style name="AppBaseThemCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="checkBoxSplitGroup" parent="AppTheme">
        <item name="colorControlActivated">@color/color_purple</item>
        <item name="colorControlNormal">@color/color_purple</item>
    </style>

    <style name="AppDialog.Panel" parent="android:Theme.Holo.Light.Panel">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="brandonbldTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/brandon_bld</item>
    </style>

    <style name="brandonblkTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/brandon_blk</item>
    </style>

    <style name="roboto_MediumTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/boboto_medium</item>
    </style>

    <style name="brandonmedTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/brandon_med</item>
    </style>

    <style name="brandonregTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/brandon_reg</item>
    </style>

    <style name="brandonthinTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/brandon_thin</item>
    </style>

    <style name="brandonregEditText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/brandon_reg</item>
    </style>

    <style name="brandonmedEditText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/brandon_med</item>
    </style>

    <style name="brandonRegEditText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/brandon_reg</item>
    </style>

    <style name="brandonmedButton" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/brandon_med</item>
    </style>

    <style name="brandonbldButton" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/brandon_bld</item>
    </style>

    <style name="brandonblkButton" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/brandon_blk</item>
    </style>

    <style name="fontButtonBikoRegular" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/biko_regular</item>
    </style>

    <style name="fontButtonBikoBold" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/biko_bold</item>
    </style>

    <style name="fontButtonBrandonblk" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/brandon_blk</item>
    </style>

    <style name="fontTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/boboto_medium</item>
    </style>

    <style name="fontTextViewBikoRegular" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/biko_regular</item>
    </style>


    <style name="MFP_BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mfp_toolbar_theme">@style/MFP_BaseToolbarTheme</item>
    </style>

    <style name="MFP_BaseToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="PreviewButtonsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#fafafa</item>
    </style>

</resources>
